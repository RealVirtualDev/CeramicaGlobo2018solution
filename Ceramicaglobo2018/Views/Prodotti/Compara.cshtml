@using WebSite.Models
@using WebSite.Infrastructure


@model List<Prodotti>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section headerMeta{
    <title>Search Result</title>

}
<div class="sitecontent innercontent" style="margin-top:180px;">
    <nav>
        <div class="pagebreadcrumb">
            @("breadcrumb_seiin".Translate()): <a href="/">Ceramica Globo</a> | <span>@("txt_risultatocerca".Translate())</span>
        </div>
    </nav>
    <section>
        <h1 class="sectiontitle">@ViewBag.titolo</h1>
        <div class="row margin-top-60">
            @foreach (Prodotti p in Model)
            {
                <div class="col  colcompare">
                    <img class="img-fluid" src="@p.icona" title="@(p.titolo + " " + p.codice)" />
                    <div class="comparesize">@(p.basecm != 0 ? p.basecm.ToString() + " x " + p.altezzacm.ToString() + (p.profonditacm != 0 ? (" x " + p.profonditacm) : "") : "")</div>
                    <a class="comparelinkcollection">@p.collezionename</a>
                    <div class="comparetitle">@(p.titolo + " " + p.codice)</div>
                    <div class="comparedescription">@Html.Raw(p.content)</div>
                   
                </div>
            }
            @if (Model.Count() == 0)
            {
                <div class="emptysearch col-md-12">
                    @("txt_emptysearch".Translate())
                </div>
            }
        </div>


    </section>
</div>
