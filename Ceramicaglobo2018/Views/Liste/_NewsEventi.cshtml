@using WebSite.Models
@model List<NewsEventi>

<div class="row margin-top-80">
    @foreach (NewsEventi r in Model)
    {
        <div class="col-md-3 item-column">
            <a class="d-block pointer" onclick="galleryPopup.show('evento','@r.itemgroup')"><img src="@r.img" alt="" class="img-fluid" /></a>
            <h2 class="item-titolo">@r.titolo</h2>
            <div class="item-sottotitolo">@r.descrizione</div>
        </div>
    }
</div>
