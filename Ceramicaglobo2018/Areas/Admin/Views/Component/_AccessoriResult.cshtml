@using WebSite.Models
@model List<Prodotti>

@if (Model.Count > 0)
{ 
    foreach (Prodotti p in Model)
    {
    <div data-uidaccessorio="@(p.itemgroup + "|" + p.codice + "|" + p.titolo)" class="accessorioitemwrapper col-md-3 text-center">
       <div class="accessorioitem">
           <img class="accessorioicona" src="@(p.icona)" />
           <br />
           @(p.codiceCompleto)<br />
           @(p.collezionename)<br />
           <div class="accessoritext">
               @Html.Raw(p.titolo + " - " + p.descrizione)<br /><br />
           </div>
           
           <a onclick="CustomComponents.AccessoriSelector.collegaProdotto('@(p.itemgroup + "|" + p.codice + "|" + p.titolo)')" class="btcollegaaccessorio">COLLEGA AL PRODOTTO</a>
           <a onclick="CustomComponents.AccessoriSelector.scollegaProdotto('@(p.itemgroup + "|" + p.codice + "|" + p.titolo)')" class="btscollegaaccessorio">SCOLLEGA</a>
       </div>
    </div>
       
    }
}

else
{
    <div class="accessorinoresult">Nessun Risultato per il testo inserito</div>
}
